    <script>
        // Scroll animations
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('visible');
                }
            });
        }, observerOptions);

        document.querySelectorAll('.fade-in').forEach(el => {
            observer.observe(el);
        });

        // Hero video functionality with comprehensive debugging
        const heroVideo = document.querySelector('.hero-video');
        const heroFallback = document.querySelector('.hero-fallback');
        const debugStatus = document.getElementById('debug-status');

        function updateDebugInfo(message) {
            console.log(message);
            if (debugStatus) {
                debugStatus.innerHTML += '<br>' + message;
            }
        }

        updateDebugInfo('Video element found: ' + !!heroVideo);
        updateDebugInfo('Video src: ' + (heroVideo ? heroVideo.src : 'No video element'));

        if (heroVideo) {
            // Log initial video state
            console.log('Initial video state:', {
                readyState: heroVideo.readyState,
                networkState: heroVideo.networkState,
                currentSrc: heroVideo.currentSrc,
                src: heroVideo.src
            });

            // Add comprehensive event listeners for debugging
            heroVideo.addEventListener('loadstart', () => {
                updateDebugInfo('Video: Load started');
            });

            heroVideo.addEventListener('durationchange', () => {
                updateDebugInfo('Video: Duration changed to ' + heroVideo.duration);
            });

            heroVideo.addEventListener('loadedmetadata', () => {
                updateDebugInfo('Video: Metadata loaded - Duration: ' + heroVideo.duration + 's, Size: ' + heroVideo.videoWidth + 'x' + heroVideo.videoHeight);

                // Try to play the video
                heroVideo.play().then(() => {
                    updateDebugInfo('Video: Autoplay successful');
                    // Hide fallback when video plays
                    if (heroFallback) {
                        heroFallback.style.zIndex = '1';
                        heroVideo.style.zIndex = '2';
                    }
                }).catch(e => {
                    updateDebugInfo('Video: Autoplay prevented - ' + e.message);
                });
            });

            heroVideo.addEventListener('loadeddata', () => {
                console.log('Video: Data loaded successfully');
            });

            heroVideo.addEventListener('canplay', () => {
                console.log('Video: Can start playing');
            });

            heroVideo.addEventListener('canplaythrough', () => {
                console.log('Video: Can play through without buffering');
            });

            heroVideo.addEventListener('play', () => {
                console.log('Video: Started playing');
                // Ensure video is visible when playing
                heroVideo.style.zIndex = '2';
                if (heroFallback) {
                    heroFallback.style.zIndex = '1';
                }
            });

            heroVideo.addEventListener('pause', () => {
                console.log('Video: Paused');
            });

            heroVideo.addEventListener('error', (e) => {
                const errorMsg = 'Video: ERROR - Network: ' + heroVideo.networkState + ', Ready: ' + heroVideo.readyState + ', Src: ' + heroVideo.currentSrc;
                updateDebugInfo(errorMsg);
                console.error('Video error details:', e);

                // Show fallback background if video fails
                if (heroFallback) {
                    heroFallback.style.zIndex = '3';
                    heroVideo.style.zIndex = '1';
                }
            });

            heroVideo.addEventListener('stalled', () => {
                console.warn('Video: Download stalled');
            });

            heroVideo.addEventListener('suspend', () => {
                console.log('Video: Download suspended');
            });

            heroVideo.addEventListener('abort', () => {
                console.warn('Video: Download aborted');
            });

            // Attempt to play video on user interaction if autoplay failed
            document.addEventListener('click', () => {
                if (heroVideo.paused) {
                    console.log('Video: Attempting to play on user interaction');
                    heroVideo.play().then(() => {
                        console.log('Video: Manual play successful');
                    }).catch(e => {
                        console.error('Video: Manual play failed:', e);
                    });
                }
            }, { once: true });

            // Force video to be visible and properly sized
            heroVideo.style.display = 'block';
            heroVideo.style.visibility = 'visible';
            heroVideo.style.zIndex = '2';

            // Set autoplay attribute programmatically
            heroVideo.autoplay = true;

            // Force load the video
            heroVideo.load();

            // Try to play immediately
            setTimeout(() => {
                updateDebugInfo('Attempting manual play...');
                heroVideo.play().then(() => {
                    updateDebugInfo('Manual play successful!');
                    heroVideo.style.zIndex = '2';
                    if (heroFallback) {
                        heroFallback.style.zIndex = '1';
                    }
                }).catch(e => {
                    updateDebugInfo('Manual play failed: ' + e.message);
                });
            }, 500);

            // Log final state after setup
            setTimeout(() => {
                const state = 'Ready: ' + heroVideo.readyState + ', Network: ' + heroVideo.networkState + ', Paused: ' + heroVideo.paused + ', Duration: ' + heroVideo.duration;
