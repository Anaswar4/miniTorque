            display: none !important;
        }

        .ferrari-video::-webkit-media-controls-time-remaining-display {
            display: none !important;
        }

        .ferrari-video::-webkit-media-controls-mute-button {
            display: none !important;
        }

        .ferrari-video::-webkit-media-controls-volume-slider {
            display: none !important;
        }

        .ferrari-video::-webkit-media-controls-fullscreen-button {
            display: none !important;
        }

        /* Firefox */
