            overflow: hidden;
        }

        .ferrari-video-wrapper {
            position: relative;
            width: 100%;
            height: 0;
            padding-bottom: 56.25%; /* 16:9 aspect ratio */
            overflow: hidden;
            background: #f5f5f5;
        }

        .ferrari-video {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .ferrari-video::-webkit-media-controls {
            display: none !important;
        }

        .ferrari-video::-webkit-media-controls-panel {
            display: none !important;
        }

        .ferrari-video::-webkit-media-controls-play-button {
            display: none !important;
        }

        .ferrari-video::-webkit-media-controls-start-playback-button {
