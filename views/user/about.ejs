        // Ferrari F1 Video Hover Functionality
        const ferrariVideo = document.getElementById('ferrari-video');
        const ferrariContainer = document.getElementById('ferrari-video-container');

        if (ferrariVideo && ferrariContainer) {
            let isHovering = false;
            let hoverTimeout;
            let isPlaying = false;

            // Function to handle video play with audio
            function playVideoWithAudio() {
                if (!isPlaying && ferrariVideo.paused) {
                    isPlaying = true;
                    ferrariVideo.currentTime = 0; // Reset to beginning
                    ferrariVideo.muted = false;

                    ferrariVideo.play().then(() => {
                        console.log('Ferrari video playing with audio');
                    }).catch(e => {
                        console.error('Failed to play Ferrari video with audio:', e);
                        // Fallback: try playing muted
                        ferrariVideo.muted = true;
                        ferrariVideo.play().then(() => {
                            console.log('Ferrari video playing muted as fallback');
                        }).catch(err => {
                            console.error('Failed to play Ferrari video even muted:', err);
                            isPlaying = false;
                        });
                    });
                }
            }

            // Function to handle video pause and mute
            function pauseAndMuteVideo() {
                if (isPlaying || !ferrariVideo.paused) {
                    ferrariVideo.pause();
                    ferrariVideo.muted = true;
                    ferrariVideo.currentTime = 0; // Reset to beginning
                    isPlaying = false;
                    console.log('Ferrari video paused and muted');
                }
            }

            // Mouse enter event
            ferrariContainer.addEventListener('mouseenter', () => {
                isHovering = true;
                clearTimeout(hoverTimeout);

                // Small delay to prevent accidental triggers
                hoverTimeout = setTimeout(() => {
                    if (isHovering && ferrariVideo.readyState >= 2) { // Check if video is loaded enough
                        playVideoWithAudio();
                    }
                }, 200);
            });

            // Mouse leave event
            ferrariContainer.addEventListener('mouseleave', () => {
                isHovering = false;
                clearTimeout(hoverTimeout);

                // Immediate pause when leaving
                pauseAndMuteVideo();
            });

            // Touch events for mobile devices
            ferrariContainer.addEventListener('touchstart', (e) => {
                e.preventDefault();
                if (ferrariVideo.readyState >= 2) { // Check if video is loaded enough
                    if (ferrariVideo.paused || !isPlaying) {
                        playVideoWithAudio();
                    } else {
                        pauseAndMuteVideo();
                    }
                }
            });

            // Add video event listeners for better state tracking
            ferrariVideo.addEventListener('play', () => {
                isPlaying = true;
                console.log('Ferrari video started playing');
            });

            ferrariVideo.addEventListener('pause', () => {
                isPlaying = false;
                console.log('Ferrari video paused');
            });

            ferrariVideo.addEventListener('ended', () => {
                isPlaying = false;
                console.log('Ferrari video ended');
            });

            // Error handling
            ferrariVideo.addEventListener('error', (e) => {
                console.error('Ferrari video error:', e);
                console.error('Error details:', {
                    error: ferrariVideo.error,
                    networkState: ferrariVideo.networkState,
                    readyState: ferrariVideo.readyState,
                    currentSrc: ferrariVideo.currentSrc
                });
            });

            // Load event
            ferrariVideo.addEventListener('loadedmetadata', () => {
                console.log('Ferrari video metadata loaded:', {
                    duration: ferrariVideo.duration,
                    videoWidth: ferrariVideo.videoWidth,
                    videoHeight: ferrariVideo.videoHeight,
                    hasAudio: ferrariVideo.mozHasAudio !== false && ferrariVideo.webkitAudioDecodedByteCount !== 0
                });
            });

            // Ensure video is initially muted and paused
            ferrariVideo.muted = true;
            ferrariVideo.pause();
        }

        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
